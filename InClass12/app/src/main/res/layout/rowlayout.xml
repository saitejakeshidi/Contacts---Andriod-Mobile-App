<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/contactImageView"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toStartOf="@+id/nameTxtView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/common_full_open_on_phone" />

        <TextView
            android:id="@+id/nameTxtView"
            android:layout_width="305dp"
            android:layout_height="29dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@+id/contactImageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/phoneNoTxtView"
            android:layout_width="305dp"
            android:layout_height="32dp"
            app:layout_constraintStart_toStartOf="@+id/nameTxtView"
            app:layout_constraintTop_toBottomOf="@+id/nameTxtView" />

        <TextView
            android:id="@+id/emailTxtView"
            android:layout_width="302dp"
            android:layout_height="29dp"
            app:layout_constraintStart_toStartOf="@+id/phoneNoTxtView"
            app:layout_constraintTop_toBottomOf="@+id/phoneNoTxtView" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
